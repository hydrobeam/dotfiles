{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "rust": {
            "command": "rust-analyzer",
            "filetypes": [
                "rust"
            ],
            "rootPatterns": [
                "Cargo.toml"
            ]
        },
        "racket": {
            "command": "racket",
            "args": [
                "--lib",
                "racket-langserver"
            ],
            "filetypes": [
                "scheme",
                "racket"
            ]
        }
    },
    "python.venvPath": "${env:HOME}/.local/venv/nvim",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.local/venv/nvim/bin/black",
    "coc.preferences.formatOnSaveFiletypes": [
        "python"
    ]
}
